# HTTPSリダイレクト（最優先）
RewriteEngine on
RewriteCond %{HTTPS} !on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# セキュリティヘッダー
<IfModule mod_headers.c>
    # HTTPS強制（HSTS）
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    
    # 混在コンテンツのブロック
    Header always set Content-Security-Policy "upgrade-insecure-requests"
    
    # XSS保護
    Header always set X-XSS-Protection "1; mode=block"
    
    # コンテンツタイプスニッフィング防止
    Header always set X-Content-Type-Options "nosniff"
    
    # フレーム埋め込み制御
    Header always set X-Frame-Options "DENY"
    
    # リファラーポリシー
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy (Feature Policy の後継)
    # カメラ機能を許可（バーコードスキャン用）
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(self)"
</IfModule>

# Gzip圧縮
<IfModule mod_deflate.c>
    # テキストベースのファイルを圧縮
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # 古いブラウザ対策
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# ブラウザキャッシュの設定
<IfModule mod_expires.c>
    ExpiresActive On
    
    # デフォルト
    ExpiresDefault "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 0 seconds"
    
    # Data
    ExpiresByType text/xml "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # Feed
    ExpiresByType application/rss+xml "access plus 1 hour"
    ExpiresByType application/atom+xml "access plus 1 hour"
    
    # Favicon
    ExpiresByType image/x-icon "access plus 1 week"
    
    # Media: images, video, audio
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType audio/mp3 "access plus 1 year"
    
    # Webfonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# キャッシュコントロールヘッダー
<IfModule mod_headers.c>
    # 画像ファイル
    <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|svg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # フォントファイル
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS/JSファイル
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # HTMLファイル
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # PHPファイル
    <FilesMatch "\.php$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# ETagの削除（CDN使用時の問題を防ぐ）
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Keep-Aliveの有効化
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# URL書き換えルール
RewriteEngine on

# www無しに統一
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# 末尾のスラッシュを削除
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [L,R=301]

# 本の詳細ページ
RewriteRule ^book/([0-9]+)/?$ book_detail.php?book_id=$1 [L,QSA]
RewriteRule ^book_detail/([0-9]+)/?$ book_detail.php?book_id=$1 [L,QSA]

# 本のエンティティページ（ASIN/ISBN/Google Books ID等）
RewriteRule ^book_entity/([A-Za-z0-9_-]+)/?$ book_entity.php?asin=$1 [L,QSA]

# ユーザープロフィール
RewriteRule ^user/([a-zA-Z0-9_]+)/?$ profile.php?user_id=$1 [L,QSA]
RewriteRule ^profile/([a-zA-Z0-9_]+)/?$ profile.php?user_id=$1 [L,QSA]

# タグ検索ページ
RewriteRule ^tag/([^/]+)/?$ search_book_by_tag.php?tag=$1 [L,QSA]

# 著者ページ
RewriteRule ^author/([^/]+)/?$ search_book_by_author.php?author=$1 [L,QSA]

# 年間レポート
RewriteRule ^report/([0-9]{4})/?$ yearly_report.php?year=$1 [L,QSA]
RewriteRule ^report/([0-9]{4})/user/([0-9]+)/?$ yearly_report.php?year=$1&user=$2 [L,QSA]

# 月間レポート
RewriteRule ^report/([0-9]{4})/([0-9]{1,2})/?$ monthly_report.php?year=$1&month=$2 [L,QSA]
RewriteRule ^report/([0-9]{4})/([0-9]{1,2})/([0-9]+)/?$ monthly_report.php?year=$1&month=$2&user=$3 [L,QSA]

# OGP画像動的生成
RewriteRule ^og-image/report/([0-9]{4})/([0-9]+)\.png$ og-image.php?type=yearly_report&year=$1&user=$2 [L,QSA]
RewriteRule ^og-image/report/([0-9]{4})/([0-9]{1,2})/([0-9]+)\.png$ og-image.php?type=report&year=$1&month=$2&user=$3 [L,QSA]
RewriteRule ^og-image/analysis/([0-9]+)\.png$ og-image.php?type=analysis&id=$1 [L,QSA]

# その他のクリーンURL
RewriteRule ^bookshelf/?$ bookshelf.php [L,QSA]
RewriteRule ^add-book/?$ add_book.php [L,QSA]
RewriteRule ^ranking/?$ ranking.php [L,QSA]
RewriteRule ^help/?$ help.php [L,QSA]
RewriteRule ^announcements/?$ announcements.php [L,QSA]
RewriteRule ^activities/?$ activities.php [L,QSA]
RewriteRule ^reviews/?$ reviews.php [L,QSA]

# サイトマップ
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# 画像の最適化（WebP対応）
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # WebP画像が存在する場合は配信
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.webp -f
    RewriteRule ^(.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,E=REQUEST_image]
    
    <IfModule mod_headers.c>
        Header append Vary Accept env=REQUEST_image
    </IfModule>
</IfModule>

# PHPの設定（可能な場合）
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# ファイルアクセスの制限
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# ディレクトリ一覧の無効化
Options -Indexes

# サーバー署名の非表示
ServerSignature Off